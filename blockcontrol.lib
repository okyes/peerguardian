log_daemon_msg () {
	if [ -z "${1:-}" ] ; then
		return 1
	fi

	if [ -z "${2:-}" ] ; then
		echo -n "$1:"
		return
	fi
	echo -n "$1: $2"
}

log_end_msg () {
	if [ "$1" -eq 0 ] ; then
		log_success_msg "   ...done."
	else
		log_failure_msg "   ...fail!"
	fi
}
